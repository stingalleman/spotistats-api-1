{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",

    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./",
    "sourceMap": true,

    "moduleResolution": "node",
    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "static"]
}
